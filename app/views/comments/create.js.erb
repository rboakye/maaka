$('#single_post_<%= @post.id%>').find('.comments').append("<%= escape_javascript( render :partial => 'new_comment', :locals => {:comment => @comment} )%>");

$('#comment_kasa_comment').val("");

$('.comment-block').mouseover(function (e) {
    $(this).find('.delete-comment').css("visibility", "visible");
}).mouseleave(function () {
            $('.delete-comment').css("visibility", "hidden");
});
