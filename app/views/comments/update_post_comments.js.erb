<% if @comments.size > 1 %>
    var comment_wrapper = $('#single_post_<%= @post.id%>').find('.comments');
    comment_wrapper.html('');
    <% @comments.each do |comment| %>
       comment_wrapper.append("<%= escape_javascript( render :partial => 'new_comment',
       :locals => {:comment => comment, :user => @user, :post => @post} )%>");
    <% end %>

    $('.comment-block').mouseover(function (e) {
        $(this).find('.delete-comment').css("visibility", "visible");
    }).mouseleave(function () {
        $('.delete-comment').css("visibility", "hidden");
     });

    $('.delete-comment').tooltip();
<% end %>


