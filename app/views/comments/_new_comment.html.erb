<div id="comment_<%= comment.id  %>_kasa" class="panel panel-default comment-block">
  <% if comment.user_uuid == user.user_uuid || user.id == @user.id || user.id == post.connected_id %>
    <%= link_to 'x', comment, method: :delete, class: "close delete-comment",
      :"data-toggle" => "tooltip", :"data-placement" => "top", title: "Delete", remote: true %>
  <% end %>
  <div class="panel-body row">
    <div class="hidden-xs comment-media col-sm-2 col-md-1">
      <%= user_image_comment(user_by_guid(comment.user_uuid),'thumb') %>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-11 post-comment-block">
      <%= link_to username_by_guid(comment.user_uuid),"/" + username_id_by_guid(comment.user_uuid), class: "text-primary" %><br>
      <%= simple_format(comment.kasa_comment, {}, wrapper_tag: "span") %> &nbsp;
      <small class="text-muted text-info">
        <i class="fa fa-clock-o"></i>
        <%= time_ago_in_words(comment.created_at) %> ago
      </small>
    </div>
  </div>
</div>