<% if post.is_connected == false %>
    <div id="kasa_<%= post.id %>_post" class="timeline-item">
      <div class="timeline-info hidden-xs">
        <div class="media">
          <%= user_image(user_by_guid(post.post_by),'thumb') %>
        </div>
      </div>
      <div id="single_post_<%= post.id %>" class="panel panel-default timeline-panel kasa-panel">
        <div class="panel-heading kasa-heading">
          <%= link_to username_by_guid(post.post_by),"/" + username_id_by_guid(post.post_by),class: "text-info" %>
          <% if post.post_by == user.user_uuid %>
              <a href="/posts/delete_modal/<%= post.post_uuid %>" class="pull-right text-danger post-delete" data-remote="true">
                <i class="fa fa-trash-o fa-lg"></i>
              </a>
          <% end %>
          <small class="pull-right text-muted">
            <i class="fa fa-clock-o"></i>
            <%= time_ago_in_words(post.created_at)%> ago
          </small>
        </div>
        <div class="panel-body">
          <p>
            <%= simple_format(post.post_content, {}, wrapper_tag: "span") %>
          </p>
          <a class="btn btn-xs btn-default">Read more</a>
        </div>
        <div class="comments">
          <% post.comments.each do |comment| %>
              <div id="comment_<%= comment.id  %>_kasa" class="panel panel-default comment-block">
                <% if comment.user_uuid == user.user_uuid || user.user_uuid == post.post_by %>
                    <%= link_to 'x', comment, method: :delete, class: "close delete-comment",
                                :"data-toggle" => "tooltip", :"data-placement" => "top", title: "Delete", remote: true %>
                <% end %>
                <div class="panel-body row">
                  <div class="hidden-xs comment-media col-sm-3 col-md-1">
                    <%= user_image_comment(user_by_guid(comment.user_uuid),'thumb') %>
                  </div>
                  <div class="col-xs-12 col-sm-10 col-md-11 post-comment-block">
                    <%= link_to username_by_guid(comment.user_uuid),"/" + username_id_by_guid(comment.user_uuid), class: "text-primary" %><br>
                    <%= simple_format(comment.kasa_comment, {}, wrapper_tag: "span") %> &nbsp;
                    <small class="text-muted text-info">
                      <i class="fa fa-clock-o"></i>
                      <%= time_ago_in_words(comment.created_at) %> ago
                    </small>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <%= form_for comment, remote: true do |f| %>
            <%= f.hidden_field :post_id, value: post.id  %>
            <div class="panel panel-default comment-block">
              <div class="panel-body row">
                <div class="hidden-xs comment-media col-sm-3 col-md-1">
                  <%= user_image_comment(user_by_guid(user.user_uuid),'thumb') %>
                </div>
                <div class="col-xs-12 col-sm-9 col-md-9">
                  <%= f.text_area :kasa_comment, required:"", class: "form-control no-border no-shadow", placeholder: "Add comment", rows: "1" %>
                </div>
                <div class="col-xs-12 col-sm-1 col-md-1">
                  <%= f.submit 'Comment', class: "btn btn-default btn-md comment-btn", remote: true %>
                </div>
              </div>
            </div>
        <% end %>
      </div><!-- /panel -->
    </div>
<% end %>