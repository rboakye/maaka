<div id="kasa_<%= kasa.id %>_post" class="col-md-12 timeline-item">
  <div class="timeline-info">
    <div class="media">
      <%= user_image(user_by_guid(kasa.post_by),'thumb') %>
    </div>
  </div>
  <div class="my_single_post">
    <div id="single_post_<%= kasa.id %>" class="panel panel-default timeline-panel">
      <div class="panel-heading">
        <% if user.user_uuid == kasa.post_by%>
            <span class="text-info"><%= username_by_guid(kasa.post_by) %></span>
        <% else %>
            <%= link_to username_by_guid(kasa.post_by),"/" + username_id_by_guid(kasa.post_by),class: "text-info username_link" %>
        <% end %>
        <% if kasa.post_by == user.user_uuid || user.id == kasa.connected_id  %>
        <a href="/posts/delete_modal/<%= kasa.post_uuid %>" class="pull-right text-danger post-delete" data-remote="true">
          <i class="fa fa-trash-o fa-lg"></i>
        </a>
        <% end %>
        <small class="pull-right text-muted">
          <i class="fa fa-clock-o"></i>
          <%= time_ago_in_words(kasa.created_at)%> ago
        </small>
      </div>
      <div class="panel-body">
        <p>
          <%= kasa.post_content %>
        </p>
        <a class="btn btn-xs btn-default">Read more</a>
      </div>
      <div class="comments">
        <% kasa.comments.each do |comment| %>
            <%= render partial:  "comments/new_comment", locals: {:comment => comment, :user => user, :post => kasa} %>
        <% end %>
      </div>
      <%= form_for comment, remote: true do |f| %>
          <%= f.hidden_field :post_id, value: kasa.id  %>
          <div class="panel panel-default comment-block">
            <div class="panel-body row">
              <div class="comment-media col-md-1">
                <%= user_image_comment(user_by_guid(@current_user.user_uuid),'thumb') %>
              </div>
              <div class="col-md-10">
                <%= f.text_area :kasa_comment, required:"", class: "form-control no-border no-shadow", placeholder: "Add comment", rows: "2" %>
              </div>
              <div class="col-md-1">
                <%= f.submit 'Comment', class: "btn btn-default btn-sm comment-btn" %>
              </div>
            </div>
          </div>
      <% end %>
    </div><!-- /panel -->
  </div>
</div>