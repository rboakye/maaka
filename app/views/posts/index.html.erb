<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="row">
  <% if @user_logged_in == nil %>
      <div class="col-lg-6">
      </div>
      <div class="col-lg-6 sign-up-form">
        <%= render partial: 'users/new'%>
      </div>
  <% else %>
      <div class="page-header">
        <h2>Latest Kasa's</h2>
      </div>
      <div class="col-lg-12">
        <div class="row" id="posts">
          <% @posts.each do |post|%>
              <div class="timeline-item">
                <div class="timeline-info">
                  <div class="media">
                    <%= user_image(user_by_guid(post.post_by),'thumb') %>
                  </div>
                </div>
                <div class="panel panel-default timeline-panel">
                  <div class="panel-heading">
                    <span class="text-info"><%= username_by_guid(post.post_by) %></span>
                    <small class="pull-right text-muted">
                      <i class="fa fa-clock-o"></i>
                      <%= time_ago_in_words(post.created_at)%> ago
                    </small>
                  </div>
                  <div class="panel-body">
                    <p>
                      <%= post.post_content %>
                    </p>
                    <a class="btn btn-xs btn-default">Read more</a>
                    <a class="btn btn-xs btn-default"><i class="fa fa-reply"></i> comment</a>
                  </div>
                </div><!-- /panel -->
              </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>




