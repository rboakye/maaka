<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="row">
  <% if @user_logged_in == nil || @user_logged_in == false%>
      <div class="col-lg-6" id="home_image">
      </div>
      <div class="col-lg-6 sign-up-form">
        <%= render partial: 'users/new'%>
      </div>
  <% else %>
      <div class="page-header">
        <h2>Latest Kasa's</h2>
      </div>
      <div class="col-lg-12">
        <div class="row" id="posts">
          <% @posts.each do |post|%>
             <% if post.momentable_type == 'Post' %>
                <%= render partial: 'posts/news_feed_kasa', :locals => {:post => find_momentable(post.momentable_id, 'Post'), user: @current_user, :comment => @comment} %>
             <% elsif post.momentable_type == 'Image'  %>
                <%= render partial: 'posts/news_feed_image', :locals => {:image => find_momentable(post.momentable_id, 'Image'), user: @current_user, :comment => @comment} %>
             <% elsif post.momentable_type == 'Comment' %>
                <%= render partial: 'posts/comment_feed', :locals => {:comment_type => find_momentable(post.momentable_id, 'Comment'), user: @current_user, :comment => @comment} %>
             <% else %>

             <% end %>
         <% end %>
        </div>
        <div id="delete-modal-wrapper"></div>
      </div>
      <div id="photo-modal-wrapper" class="col-lg-12"></div>
  <% end %>
</div>





