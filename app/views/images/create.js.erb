<% if @image.new_record? %>
    $('.error').html("<%= escape_javascript(error_messages_for(@image))%>");
<% else %>
if ($('#images-wrapper') !== undefined) {
    $('#images-wrapper').append("<%=j render partial: 'images/loaded', locals: { image: @image } %>");

    $('.img-add').mouseover(function (e) {
        $(this).find('.img-remove').css("visibility", "visible");
    }).mouseleave(function () {
                $('.img-remove').css("visibility", "hidden");
            });
}
<% end %>

