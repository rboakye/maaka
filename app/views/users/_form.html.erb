<div class="form-group">
  <div class="col-lg-6">
    <%= f.text_field :first_name, :class => 'form-control input-lg', :placeholder => 'First Name' %>
  </div>
  <div class="col-lg-6">
    <%= f.text_field :last_name, :class => 'form-control input-lg', :placeholder => 'Last Name' %>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-12">
    <%= f.text_field :email, :class => 'form-control input-lg', :placeholder => 'Email Address' %>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-12">
    <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => 'Enter New Password' %>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-12">
    <%= f.password_field :password_confirmation, :class => 'form-control input-lg', :placeholder => 'Confirm New Password' %>
  </div>
</div>
