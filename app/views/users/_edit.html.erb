<div class="panel panel-default">
    <div class="panel-heading">
      <strong>Basic Information</strong>
      <div class="pull-right">
        <strong>Last Update: </strong> <span class="text-primary"><%=  time_ago_in_words(@user.updated_at) %> ago </span>
      </div>
    </div>
  <%= form_for @user, :html => {:class => "form-horizontal form-border"} do |f| %>
      <%= error_messages_for(@user) %>
      <div class="panel-body">
      <div class="form-group">
        <label class="control-label col-md-2">First Name</label>
        <div class="col-md-10">
          <%= f.text_field :first_name, :class => 'form-control input-lg' %>
        </div>
        </div><!-- /.col -->
      <div class="form-group">
        <label class="control-label col-md-2">Last Name</label>
        <div class="col-md-10">
          <%= f.text_field :last_name, :class => 'form-control input-lg' %>
        </div>
      </div><!-- /.col -->
      <div class="form-group">
        <label class="control-label col-md-2">Username</label>
        <div class="col-md-10">
          <%= f.text_field :user_name, :class => 'form-control input-lg' %>
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Password</label>
        <div class="col-md-10">
          <input type="password" value="Password" class="form-control input-lg">
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
          <%= f.text_field :email, :class => 'form-control input-lg' %>
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Gender</label>
        <div class="col-md-10">
          <label class="label-radio radio-inline">
            <%= f.radio_button :gender, "Male", checked: @user.gender == "Male" %>
            <span class="custom-radio"></span>
            Male
          </label>
          <label class="label-radio radio-inline">
            <%= f.radio_button :gender, "Female", checked: @user.gender == "Female" %>
            <span class="custom-radio"></span>
            Female
          </label>
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Birth Date</label>
        <div class="col-md-10">
          <%= f.date_select :birth_date, {order: [:day,:month,:year], start_year: 1950}, {:class => 'form-control col-md-3 input-lg date_field'} %>
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Current City</label>
        <div class="col-md-10">
          <%= f.text_field :current_city, :class => 'form-control input-lg' %>
        </div><!-- /.col -->
      </div><!-- /form-group -->
      <div class="form-group">
        <label class="control-label col-md-2">Phone</label>
        <div class="col-md-10">
          <%= f.text_field :phone, :class => 'form-control input-lg' %>
        </div><!-- /.col -->
      </div><!-- /form-group -->
    </div>
    <div class="panel-footer">
      <div class="text-right">
        <%= f.submit 'Update', :class => 'btn btn-sm btn-success' %>
      </div>
    </div>
  <% end %>
</div>
