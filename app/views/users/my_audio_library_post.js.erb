$('.audio-sentence').html("<%= escape_javascript(render partial: 'audio_partial', locals: {audio_sentence: @kasa_sentence})%>")
$("#kasa_sentence").val('');
if($('.record').hasClass('start')){
   $('.record').removeClass('disabled');
}
$('.audio-sentence').children(':first-child').addClass('next');
var current_word = $('.audio-sentence').find('.next');
current_word.toggleClass("word-item-short word-item-tall");
current_word.toggleClass("label-info label-success");
current_word.find('i').toggleClass("hide show");
