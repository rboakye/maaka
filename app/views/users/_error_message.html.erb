<% if @user.errors.any? %>
    <div class="alert alert-info">
      <h2><%= pluralize(@user.errors.count, "error") %> happened</h2>
      <p>There was a problem with the following fields:</p>
      <ul>
        <% @user.errors.full_messages.each do |m| %>
            <li><%= m %></li>
        <% end %>
      </ul>
    </div>
<% end %>
